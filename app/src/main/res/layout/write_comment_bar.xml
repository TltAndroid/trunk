<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:layout_alignParentBottom="true"
    android:background="@drawable/write_comment_bar_bg"
    android:paddingLeft="15.0dip"
    android:paddingRight="15.0dip"
    android:gravity="center_vertical">
    <TextView
        android:id="@+id/tv_reply"
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="32dp"
        android:gravity="center|left"
        android:background="@drawable/bg_detail_comment_btn"
        android:paddingLeft="12.0dip"
        android:layout_marginRight="5dp"
        android:textSize="13.0sp"
        android:textColor="@color/detail_action_write_comment_text"
        android:text="@string/detail_write_comment"/>
    <FrameLayout
        android:id="@+id/action_new_review"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/new_review"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/badge_bg"
            android:gravity="center"
            android:layout_gravity="right"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:textSize="8sp"
            android:textColor="#fffafafa"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:layout_marginTop="8.5dp"
            android:layout_marginRight="8dp"
            android:text="177"/>
    </FrameLayout>
    <ImageView
        android:id="@+id/action_new_love"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:paddingLeft="5dp"
        android:scaleType="center"
        android:src="@drawable/new_love"/>
    <ImageView
        android:id="@+id/action_new_share"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:paddingLeft="5dp"
        android:scaleType="center"
        android:src="@drawable/new_share"/>
</LinearLayout>