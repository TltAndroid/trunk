<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="15dp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_avatar"
        android:src="@android:color/holo_blue_light"
        android:layout_height="35dp"
        android:layout_width="35dp"/>
    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:layout_toRightOf="@id/iv_avatar"
        android:layout_marginLeft="10dp"
        android:textColor="#ff406599"
        android:textSize="15.0sp"
        android:text="鱼鱼鱼鱼鱼鱼鱼"/>
    <TextView
        android:id="@+id/tv_like_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/comment_like_icon"
        android:drawablePadding="5dp"
        android:layout_alignParentRight="true"
        android:text="223"
        android:textColor="#ffcacaca" />
    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_avatar"
        android:layout_below="@id/tv_user_name"
        android:layout_alignLeft="@id/tv_user_name"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:lineSpacingExtra="6.0dip"
        android:textColor="#ff505050"
        android:textSize="16.0sp"
        android:text="评论内容评论内容评论内容评论内容评论内容评论内容评论内容评论内容评论内容评论内容评论内容评论内容"/>
    <TextView
        android:id="@+id/comment_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_avatar"
        android:layout_below="@id/tv_content"
        android:layout_alignLeft="@id/tv_content"
        android:layout_marginTop="10dp"
        android:textColor="#ff505050"
        android:textSize="12.0sp"
        android:text="3分钟前"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/background_gray3"
        android:layout_below="@id/comment_time"
        android:layout_alignLeft="@id/comment_time"
        android:layout_marginTop="8dp"
        />
</RelativeLayout>