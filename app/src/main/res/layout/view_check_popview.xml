<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:background="@color/title_background"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <com.sirc.tlt.ui.view.DrawableCenterTextView
        android:id="@+id/tv_pop_all_questions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/all_questions"
        android:textColor="@color/white"
        android:textSize="@dimen/item_content_text_size_14sp"
        android:gravity="center"
        android:padding="5dp"
        android:layout_margin="5dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/text_gray"/>

    <com.sirc.tlt.ui.view.DrawableCenterTextView
        android:id="@+id/tv_pop_hot_questions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hot_questions"
        android:textColor="@color/white"
        android:textSize="@dimen/item_content_text_size_14sp"
        android:gravity="center"
        android:padding="5dp"
        android:layout_margin="5dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/text_gray"/>
    <com.sirc.tlt.ui.view.DrawableCenterTextView
        android:id="@+id/tv_pop_lasted_questions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lasted_questions"
        android:textColor="@color/white"
        android:textSize="@dimen/item_content_text_size_14sp"
        android:gravity="center"
        android:padding="5dp"
        android:layout_margin="5dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/text_gray"/>
    <com.sirc.tlt.ui.view.DrawableCenterTextView
        android:id="@+id/tv_pop_my_collected_questions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/my_collected_question"
        android:textColor="@color/white"
        android:textSize="@dimen/item_content_text_size_14sp"
        android:gravity="center"
        android:padding="5dp"
        android:layout_margin="5dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/text_gray"/>

</LinearLayout>